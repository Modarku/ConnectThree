<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ConnectThree">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ctContainerTopButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/ctBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="@string/ct_btn_back" />

            <Button
                android:id="@+id/ctBtnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="@string/ct_btn_reset" />

            <TextView
                android:id="@+id/ctTvTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:text="@string/ct_tv_tip"
                android:textSize="20sp"
                tools:text="@string/ct_tv_tip" />

            <TextView
                android:id="@+id/ctTvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ct_tv_state"
                android:textSize="34sp"
                tools:text="@string/ct_tv_state" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ctContainerBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ctContainerTopButtons">

            <LinearLayout
                android:id="@+id/ctContainerRow0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <Button
                    android:id="@+id/ctBtnRow0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="@string/ct_btn_drop"
                    android:textSize="20sp"
                    tools:text="@string/ct_btn_drop" />

                <TextView
                    android:id="@+id/ctTvCell4Row0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell3Row0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell2Row0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell1Row0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell0Row0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctContainerRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <Button
                    android:id="@+id/ctBtnRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="@string/ct_btn_drop"
                    android:textSize="20sp"
                    tools:text="@string/ct_btn_drop" />

                <TextView
                    android:id="@+id/ctTvCell4Row1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell3Row1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell2Row1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell1Row1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell0Row1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctContainerRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <Button
                    android:id="@+id/ctBtnRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="@string/ct_btn_drop"
                    android:textSize="20sp"
                    tools:text="@string/ct_btn_drop" />

                <TextView
                    android:id="@+id/ctTvCell4Row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell3Row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell2Row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell1Row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell0Row2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctContainerRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <Button
                    android:id="@+id/ctBtnRow3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="@string/ct_btn_drop"
                    android:textSize="20sp"
                    tools:text="@string/ct_btn_drop" />

                <TextView
                    android:id="@+id/ctTvCell4Row3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell3Row3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell2Row3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"

                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell1Row3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell0Row3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"

                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctContainerRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <Button
                    android:id="@+id/ctBtnRow4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="@string/ct_btn_drop"
                    android:textSize="20sp"
                    tools:text="@string/ct_btn_drop" />

                <TextView
                    android:id="@+id/ctTvCell4Row4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell3Row4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell2Row4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell1Row4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/ctTvCell0Row4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ct_cell_empty"
                    android:gravity="center"
                    android:textSize="48sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>